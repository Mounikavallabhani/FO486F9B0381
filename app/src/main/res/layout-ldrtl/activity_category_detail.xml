<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/item_TB_id"
        android:background="@color/blue">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/item_TB_IV_id"
                android:src="@drawable/ic_back_white"
                android:layout_centerVertical="true"
                android:padding="2dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_TB_title_id"
                android:text="dnews"
                android:textSize="23sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />


        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/item_TB_id"
        android:layout_above="@+id/item_bottom_RL_id"
        android:scrollbars="none"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/item_inner_RL_id"
            android:layout_below="@+id/item_TB_id"
            android:layout_above="@+id/item_bottom_RL_id"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/more_details_item_IV_id"
        android:background="@drawable/image_round_corner"
        android:src="@drawable/aaa"
        android:scaleType="centerCrop"
        android:layout_marginTop="20dp"
        android:elevation="4dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/category_title"
        android:layout_below="@+id/more_details_item_IV_id"
        android:text="Top startups that are changing the way we travel"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/category_title"
        android:layout_marginTop="10dp"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/more_details_item_TV2_id"
            android:layout_centerVertical="true"
            android:text="19m ago"
            android:textSize="12dp"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/more_details_item_bottom_RL_download_IV_id"
            android:src="@drawable/ic_download"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:padding="2dp"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/more_details_item_bottom_RL_like_IV_id"
            android:layout_toLeftOf="@+id/more_details_item_bottom_RL_download_IV_id"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_like"
            android:scaleType="centerCrop"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:padding="2dp"
            />

    </RelativeLayout>

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>