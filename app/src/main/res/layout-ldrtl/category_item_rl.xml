<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">






    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:id="@+id/category_item_cardview_id"
        app:cardCornerRadius="5dp"
        android:layout_margin="4dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tint="#6F000000"
            android:id="@+id/category_item_imageview_id"
            android:src="@drawable/aaa"
            android:scaleType="centerCrop"
            android:foreground="@drawable/gradient_background"
            />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/category_item_rl_tv_id"
                    android:layout_toLeftOf="@+id/category_item_rl_iv_id"
                    android:text="NEWS"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/category_item_rl_tv2_id"
                android:layout_below="@+id/category_item_rl_tv_id"
                android:text=""
                android:textColor="@color/white"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:textSize="12dp"
                />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:id="@+id/category_item_rl_iv_id"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_more"
                android:padding="5dp"
                android:visibility="gone"
                android:scaleType="centerCrop"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>
